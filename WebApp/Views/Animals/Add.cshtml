@model WebApp.Models.AnimalViewModel
@{
}
<h2 class="mb-1">Добавить животное</h2>

<div class="d-flex">
    <form method="post">
        <div class="form-group mb-3">
            <input placeholder="Паспорт животного" type="text" class="form-control" asp-for="Passport">
            <span class="text-danger" asp-validation-for="Passport"></span>
        </div>
        @Html.DropDownListFor(model => model.Kind, ViewBag.Kinds as SelectList)
        @Html.DropDownListFor(model => model.Breed, ViewBag.Breeds as SelectList)
        <div class="form-group mb-3">
            <input placeholder="Имя" type="text" class="form-control" asp-for="Nickname">
            <span class="text-danger" asp-validation-for="Nickname"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Цвет" type="text" class="form-control" asp-for="Color">
            <span class="text-danger" asp-validation-for="Color"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Особые приметы" type="text" class="form-control" asp-for="SpecificTraits">
            <span class="text-danger" asp-validation-for="SpecificTraits"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Дата рождения" type="date" class="form-control" asp-for="Birthday">
            <span class="text-danger" asp-validation-for="Birthday"></span>
        </div>
        <div class="text-center mt-3">
             <button class="btn btn-dark" type="submit">Добавить</button>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}