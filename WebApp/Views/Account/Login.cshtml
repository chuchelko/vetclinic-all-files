@model WebApp.Models.LoginViewModel
@{
}
<h2 class="mb-3">Войти на сайт</h2>

<div class="d-flex justify-content-center">
    <form asp-antiforgery="true" method="post">
        <div class="form-group mb-3">
            <input placeholder="Номер телефона" type="text" class="form-control" asp-for="PhoneNumber">
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Пароль" type="password" class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="text-center mt-3">
             <button class="btn btn-dark" type="submit">Submit</button>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}