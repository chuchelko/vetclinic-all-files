@model WebApp.Models.RegisterViewModel

<h2 class="mb-3">Регистрация</h2>
<div class="d-flex justify-content-center">
    <form asp-antiforgery="true" method="post" asp-action="Register">
        <div class="form-group mb-3">
            <input placeholder="День рождения" type="date" class="form-control" asp-for="Birthday">
            <span class="text-danger" asp-validation-for="Birthday"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Имя" type="text" class="form-control" asp-for="FirstName">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Фамилия" type="text" class="form-control" asp-for="LastName">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Отчество" type="text" class="form-control" asp-for="Patronymic">
            <span class="text-danger" asp-validation-for="Patronymic"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Паспорт" type="text" class="form-control" asp-for="Passport">
            <span class="text-danger" asp-validation-for="Passport"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Номер телефона" type="text" class="form-control" asp-for="PhoneNumber">
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Пароль" type="password" class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group mb-3">
            <input placeholder="Повторите пароль" type="password" class="form-control" asp-for="ConfirmPassword">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="text-center mt-3">
             <button class="btn btn-dark" type="submit">Submit</button>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}